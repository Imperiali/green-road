@model IEnumerable<GreenRoad.Domain.Post.PostDataModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PerfilNome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="img-greenroad">
            <img class="img-responsive img-thumbnail" src="@item.Foto" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.ActionLink(item.PerfilNome, "Details", "Perfil", new { id = item.PerfilId, @class="" }, null)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
