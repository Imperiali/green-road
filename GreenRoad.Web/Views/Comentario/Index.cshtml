@model IEnumerable<GreenRoad.Domain.Comentario.ComentarioDataModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PerfilNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Texto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.PerfilNome, "Details", "Perfil", new { id = item.PerfilId, @class = "" }, null)
        </td>
        <td>
            @Html.ActionLink(item.PostNome, "Details", "Post", new { id = item.PostId, @class = "" }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Texto)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
